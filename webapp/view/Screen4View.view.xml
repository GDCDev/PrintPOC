<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:cd="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" controllerName="sap.m.PrintPOC.controller.Screen4View">
	<App>
		<pages>
			<Page title="{i18n>title}" showNavButton="true" navButtonPress="onNavBack">
			<footer>
				    <Bar class="sapContrast sapContrastPlus" id="bar0">
				        <contentMiddle>
				            <Button text="{i18n>printLabel}" width="100px" id="button0" type="Emphasized"/>
				        </contentMiddle>
				    </Bar>
				</footer>
			<content>
				<Panel id="detail" backgroundDesign="Solid" >
				    <DisplayListItem label="EAN" value="{EAN}" id="item1"/>
				    <DisplayListItem label="Style" value="{Style}" id="item2"/>
				    <DisplayListItem label="" value="{Description}" id="item3"/>
				    <DisplayListItem label="Season" value="{Season}" id="item4"/>
				    <DisplayListItem label="Division" value="{Division}" id="item5"/>
				    <DisplayListItem label="Color" value="{Colour}" id="item6"/>
				    <DisplayListItem label="Size" value="{Size}" id="item7"/>
				    <Bar>
				    	<contentRight>
				    		<Label xmlns="sap.m" text="Price: " width="100%" id="label1"/>
				    		<Input xmlns="sap.m" width="50%" id="input0" type="Number" textAlign="Right" value="{Netprice}"/>
				    	</contentRight>
				     </Bar>
			    
			    </Panel>
			</content>
			</Page>
		</pages>
	</App>
</mvc:View>